// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  password   String
  email      String    @unique
  created_at DateTime  @default(now()) @db.Timestamp
  updated_at DateTime  @updatedAt @db.Timestamp
  deleted_at DateTime? @db.Timestamp

  TransactionType TransactionType[]
  Finances        Finances[]
}

model TransactionType {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name_type  String
  created_at DateTime  @default(now()) @db.Timestamp
  updated_at DateTime  @updatedAt @db.Timestamp
  deleted_at DateTime? @db.Timestamp
  user_id    String    @db.ObjectId

  User     User       @relation(fields: [user_id], references: [id])
  Finances Finances[]
}

enum FinanceSource {
  ENTRADA
  SAIDA
}

model Finances {
  id               String        @id @default(auto()) @map("_id") @db.ObjectId
  transaction_type String        @db.ObjectId
  user_id          String        @db.ObjectId
  value            Int
  description      String?
  finance_date     DateTime
  created_at       DateTime      @default(now()) @db.Timestamp
  updated_at       DateTime      @updatedAt @db.Timestamp
  deleted_at       DateTime?     @db.Timestamp
  finance_type     FinanceSource

  transactionType TransactionType @relation(fields: [transaction_type], references: [id])
  userId          User            @relation(fields: [user_id], references: [id])
}
